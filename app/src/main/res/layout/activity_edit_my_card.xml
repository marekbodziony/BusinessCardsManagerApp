<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="mbodziony.businesscardsmanager.MyCardActivity">
        <ImageView
            android:layout_width="350px"
            android:layout_height="350px"
            android:id="@+id/myCard_logo"
            android:layout_alignParentTop="true"
            android:src="@drawable/person_x311"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_nameTxt"
            android:text="Name : "
            android:layout_below="@id/myCard_logo"
            android:layout_marginTop="30dp"
            android:textSize="20sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_nameVal"
            android:hint="blabla"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/myCard_nameTxt"
            android:layout_alignBottom="@+id/myCard_nameTxt"
            android:layout_alignStart="@+id/myCard_mobileVal"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_mobileTxt"
            android:text="Mobile : "
            android:layout_below="@id/myCard_nameTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_mobileVal"
            android:hint="123445678"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignBaseline="@+id/myCard_mobileTxt"
            android:layout_alignBottom="@+id/myCard_mobileTxt"
            android:layout_alignStart="@+id/myCard_phoneVal"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_phoneTxt"
            android:text="Phone : "
            android:layout_below="@id/myCard_mobileTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_phoneVal"
            android:hint="123445678"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignBaseline="@+id/myCard_phoneTxt"
            android:layout_alignBottom="@+id/myCard_phoneTxt"
            android:layout_alignStart="@+id/myCard_faxVal"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_faxTxt"
            android:text="Fax : "
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/myCard_phoneTxt" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_faxVal"
            android:hint="123445678"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@+id/myCard_phoneTxt"
            android:layout_alignStart="@+id/myCard_emailVal"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_emailTxt"
            android:text="Email : "
            android:layout_below="@id/myCard_faxTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_emailVal"
            android:hint="default@gmail.com"
            android:textStyle="bold"
            android:layout_below="@id/myCard_faxTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@+id/myCard_emailTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_webTxt"
            android:text="Web : "
            android:layout_below="@id/myCard_emailTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_webVal"
            android:hint="http://www.default.com"
            android:textStyle="bold"
            android:layout_below="@id/myCard_emailTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@+id/myCard_webTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_companyTxt"
            android:text="Company : "
            android:layout_below="@id/myCard_webTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_companyVal"
            android:hint="Default Inc."
            android:textStyle="bold"
            android:layout_below="@id/myCard_webTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@id/myCard_companyTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_addressTxt"
            android:text="Adres : "
            android:layout_below="@id/myCard_companyTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_addressVal"
            android:hint="16 Default St., 01-000 City, Country"
            android:textStyle="bold"
            android:layout_below="@id/myCard_companyTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:textSize="15sp"
            android:layout_alignBaseline="@id/myCard_addressTxt"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_jobTxt"
            android:text="Job : "
            android:layout_below="@id/myCard_addressVal"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_jobVal"
            android:hint="default job"
            android:textStyle="bold"
            android:layout_below="@id/myCard_addressVal"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@id/myCard_jobTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_facebookTxt"
            android:text="Facebook : "
            android:layout_below="@id/myCard_jobTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_facebookVal"
            android:hint="http://facebook.com/default"
            android:textStyle="bold"
            android:layout_below="@id/myCard_jobTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@id/myCard_facebookTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_tweeterTxt"
            android:text="Tweeter : "
            android:layout_below="@id/myCard_facebookTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_tweeterVal"
            android:hint="default@tweeter.com"
            android:textStyle="bold"
            android:layout_below="@id/myCard_facebookTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@id/myCard_tweeterTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_skypeTxt"
            android:text="Skype : "
            android:layout_below="@id/myCard_tweeterTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_skypeVal"
            android:hint="default skype"
            android:textStyle="bold"
            android:layout_below="@id/myCard_tweeterTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@id/myCard_skypeTxt"
            android:textSize="15sp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_otherTxt"
            android:text="Other : "
            android:layout_below="@id/myCard_skypeTxt"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myCard_otherVal"
            android:hint="other default details"
            android:textStyle="bold"
            android:layout_below="@id/myCard_skypeTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/myCard_nameTxt"
            android:layout_alignBaseline="@id/myCard_otherTxt"
            android:textSize="15sp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/editMyCard_cancelBtn"
            android:layout_below="@id/myCard_otherTxt"
            android:layout_marginTop="40dp"
            android:layout_alignParentLeft="true"
            android:onClick="cancel"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/editMyCard_saveBtn"
            android:layout_below="@id/myCard_otherTxt"
            android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"
            android:onClick="save"/>

    </RelativeLayout>
</ScrollView>